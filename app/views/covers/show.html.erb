<ul class="menu">
  <li>Starters</li>
  <li>Main Course</li>
  <li>Salads</li>
  <li>Deserts</li>
</ul>
<div class="container" data-controller="order">
  <% @foods.each do |food| %>
  <div class="card-product col-sm-12 m-2">
  <img src="https://static.toiimg.com/thumb/56933159.cms?imgsize=686279&width=800&height=800" />
  <div class="card-product-infos">
    <h2><%= food.name %></h2>
    <p><%= food.description %></p>
    <h2 class="price"><%= food.price %></h2>
  </div>
  <div>
    (5)
  </div>
  <i class="fa-solid fa-plus fs-4 border border-3 rounded-4 p-1" id="<%=food.id%>" data-action="click->order#increase" data-order-target="<%=food.name%>"> </i>
  </div>

  <% end %>
</div>

<footer class="d-flex justify-content-between p-3">
  <p class="border border-1 rounded-4 p-2">2</p>
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
    View Basket
    </button>
  <p class="d-flex align-items-center">Price</p>
</footer>
<div class="container d-flex justify-content-center">
  <a href="#" class="btn btn-light order">Order</a>
</div>

