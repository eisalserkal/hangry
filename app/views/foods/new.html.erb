<%= simple_form_for [@restaurant, @food], class: 'col-6' do |f| %>
<%=  f.input :name,
              required: true%>
<%=  f.input :price,
              required: true%>
<%=  f.input :description,
              required: true%>
<%=  f.input :category,
              required: true%>
<%= f.input :photo, as: :file %>
<%= f.submit "Create A Dish!", class: "btn btn-primary" %>
<% end %>
