
<div class="container" >
    <h1 class="text-center">Receipt</h1>
      <table class="body-wrap">
          <tbody><tr>
              <td></td>
              <td class="container" width="600">
                  <div class="content">
                      <table class="main" width="100%" cellpadding="0" cellspacing="0">
                          <tbody><tr>
                              <td class="content-wrap aligncenter">
                                  <table width="100%" cellpadding="0" cellspacing="0">
                                      <tbody>
                                      <tr>
                                          <td class="content-block">
                                              <table class="invoice">
                                                  <tbody>
                                                  <tr>
                                                      <td>
                                                          <table class="invoice-items" cellpadding="0" cellspacing="0">
                                                              <tbody>
                                                                <%  @item_hashes_grouped.each do |item| %>
                                                                  <tr>
                                                                      <td><%= item[:name] %> (<%= item[:quantity] %>)</td>
                                                                      <td class="alignright">AED<%= Food.find_by(name:item[:name]).price*item[:quantity] %></td>
                                                                  </tr>
                                                                  <% end %>
                                                              <tr class="total">
                                                                  <td class="alignright" width="80%">Total</td>
                                                                  <td class="alignright">AED<%= @sum %></td>
                                                              </tr>
                                                          </tbody></table>
                                                      </td>
                                                  </tr>
                                              </tbody></table>
                                          </td>
                                      </tr>
                                  </tbody></table>
                              </td>
                          </tr>
                      </tbody></table>
                      <div class="footer">
                          <table width="100%">
      </table>
                      </div></div>
              </td>
              <td></td>
          </tr>
      </tbody></table>
  <p class="text-center"><%= link_to "Back to order", order_path(@order), :class => "btn mb-3" %></p>
</div>
