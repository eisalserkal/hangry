
<div class="container" >
<h1 class="text-center">Your order</h1>
  <% @order.order_items.each do |item| %>
  <div class="card-product col-sm-12 m-2">
    <% if item.food.photo.blank? %>
    <img src="https://media.istockphoto.com/photos/food-backgrounds-table-filled-with-large-variety-of-food-picture-id1155240408?k=20&m=1155240408&s=612x612&w=0&h=Zvr3TwVQ-wlfBnvGrgJCtv-_P_LUcIK301rCygnirbk=" alt="VR Zone">
    <% else %>
    <%= cl_image_tag item.food.photo.key, height: 100, width: 100, crop: :fill %>
    <% end %>
  <div class="card-product-infos">
    <h2 ><%= item.food.name %>
    <% if (item.created_at - @order.created_at) > 0.5 %>
     (Additional)
     <% end %></h2>
    <p class="description"><%= item.food.description %></p>
    <h2 class="price"><%= item.food.price %></h2>
  </div>
  <p class=" fs-4 border border-3 rounded-4 p-1"><%= item.quantity %> </p>
  </div>
  <% end %>
  <ul class="list-unstyled">
    <% if @order.receipt.is_paid != true %>
      <li>
        <%= link_to 'Proceed to payment', receipt_path(@receipt), :class => "btn btn-primary mb-3" %>
      </li>

      <li>
        <%= link_to 'Add to order', restaurant_path(@restaurant, cover_id: @cover.id, order_id: @order.id), :class => "btn btn-primary" %>
      </li>
      <% else %>
      <li>
        <%= link_to 'Back to menu', restaurant_path(@restaurant, cover_id: @cover.id), :class => "btn btn-primary" %>
      </li>
      <% end %>

  </ul>
  <h3>Your table has been assigned to the waiter <%= @waiter.name %></h3>
  <hr>
  <h4>Request for assistance from waiter</h4>
  <%= simple_form_for [@order, @request], class: 'col-6' do |f| %>

    <%=  f.input :content,
                  required: true%>
    <%= f.submit "Send request", class: "btn btn-primary" %>
    <% end %>
</div>
