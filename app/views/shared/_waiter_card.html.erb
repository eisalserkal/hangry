<div class="col-4">
  <div class="card">
      <div class="imgBx">
          <% if waiter.photo.blank? %>
          <img src="https://media.istockphoto.com/photos/food-backgrounds-table-filled-with-large-variety-of-waiter-picture-id1155240408?k=20&m=1155240408&s=612x612&w=0&h=Zvr3TwVQ-wlfBnvGrgJCtv-_P_LUcIK301rCygnirbk=" alt="VR Zone">
          <% else %>
          <%= cl_image_tag waiter.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
      </div>
      <div class="contentBx">
        <h2><%= waiter.name %></h2>
        <%= link_to edit_restaurant_waiter_path(waiter.restaurant, waiter) do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
        <%= link_to restaurant_waiter_path(waiter.restaurant, waiter), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>

  </div>
</div>
