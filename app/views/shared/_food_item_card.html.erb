

<div class="col-4">
  <div class="card">
      <div class="imgBx">
          <% if food.photo.blank? %>
          <img src="https://media.istockphoto.com/photos/food-backgrounds-table-filled-with-large-variety-of-food-picture-id1155240408?k=20&m=1155240408&s=612x612&w=0&h=Zvr3TwVQ-wlfBnvGrgJCtv-_P_LUcIK301rCygnirbk=" alt="VR Zone">
          <% else %>
          <%= cl_image_tag food.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
      </div>
      <div class="contentBx">
        <h2><%= food.name %></h2>
        <div class="size">
          <h3>Price: <%= food.price %> AED</h3>
        </div>
        <div class="color">
          <p>Description: <%= food.description %></p>
        </div>
        <div class="color">
          <p><%= food.category %></p>
        </div>
        <%= link_to edit_restaurant_food_path(@restaurant, food) do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
        <%= link_to restaurant_food_path(@restaurant, food), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>

  </div>
</div>
